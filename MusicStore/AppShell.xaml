<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MusicStore.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MusicStore"
    xmlns:controls="clr-namespace:MusicStore.Controls"
    
    xmlns:vm="clr-namespace:MusicStore.Views"
    Shell.FlyoutBehavior="Flyout"
    WidthRequest="400"
    >
    <Shell.FlyoutHeader>
        <controls:FlyoutHeader></controls:FlyoutHeader>
    </Shell.FlyoutHeader>


    <ShellContent Title = "MainPage" ContentTemplate = "{DataTemplate local:MainPage}" Route ="MainPage" />
<ShellContent Title = "login" ContentTemplate = "{DataTemplate vm:Login}" Route ="CheckBoxFeatures" /> 
<ShellContent Title = "CheckBox" ContentTemplate = "{DataTemplate local:CheckBoxFeatures}" Route ="CheckBoxFeatures" /> 
<ShellContent Title = "ListView" ContentTemplate = "{DataTemplate local:ListViewFeatures}" Route ="ListViewFeatures" /> 
<ShellContent Title = "Step Progress Bar" ContentTemplate = "{DataTemplate local:StepProgressBarFeatures}" Route ="StepProgressBarFeatures" /> 
<ShellContent Title = "Avatar View" ContentTemplate = "{DataTemplate local:AvatarViewFeatures}" Route ="AvatarViewFeatures" /> 
<ShellContent Title = "Button" ContentTemplate = "{DataTemplate local:ButtonFeatures}" Route ="ButtonFeatures" />
    <ShellContent Title = "Movies" ContentTemplate = "{DataTemplate vm:Movies}" Route ="Movies" /> 


</Shell>
